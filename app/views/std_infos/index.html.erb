

<h1>常用汽车电子空调标准信息</h1>

<table border="1" align="center" cellpadding="0" cellspacing="0">
  <tr>
    <th width="10%">标准号</th>
    <th width="10%">发布日期</th>
    <th width="10%">发布组织</th>
    <th width="15%">标准名称（中文）</th>
    <th width="15%">标准名称（英文）</th>
    <th width="10%">标准语言</th>
    <th width="10%">tag1</th>
    <th width="10%">tag2</th>
    <!-- <th width="10%">Path</th> -->
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @std_infos.each do |std_info| %>
  <tr>
    <td align="center" width="10%"><%= link_to std_info.std_id, std_info %></td>
    <td align="center" width="10%"><%= std_info.std_release_time %></td>
    <td align="center" width="10%"><%= std_info.std_org %></td>
    <td align="left" width="15%"><a href = "<%= std_info.std_path %>"><%= std_info.std_name_cn %></td>
    <td align="left" width="15%"><%= std_info.std_name_en %></td>
    <td align="center" width="10%"><%= std_info.std_language %></td>
    
    <td align="center" width="10%"><% std_info.tags.each do |t| %>
        <%= link_to t.tag_name %>
       <%end%> 
      </td>
    <!-- <td align="center" width="10%"><a href = "<%= std_info.std_path %>"><%= std_info.std_path %></a></td> -->
    
    <td><%= link_to '删除', std_info, method: :delete  %></td>

  </tr>
<% end %>
</table>
<br />
<p >
<%= link_to 'New Std info', new_std_info_path %>
</P>
<p >
<%= paginate @std_infos %>
</P>